{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "createFragment",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Giữ lại dòng này
    "forceConsistentCasingInFileNames": true // Giữ lại dòng này
  },
  "include": ["src/jsx.d.ts", "src/**/*"], 
  "exclude": ["node_modules", "dist"]
}